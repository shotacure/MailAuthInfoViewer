{
  "manifest_version": 2,
  "name": "Mail Auth Info Viewer",
  "version": "1.0.2",
  "description": "Visualizes email authentication results (SPF, DKIM, DMARC) and the delivery route with time delays on the message display.",
  "browser_specific_settings": {
    "gecko": {
      "id": "mail-auth-info-viewer@precure.tv",
      "strict_min_version": "115.0"
    }
  },
  "icons": {
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "permissions": [
    "messagesRead",
    "messagesModify"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
