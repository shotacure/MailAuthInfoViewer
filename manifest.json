{
  "manifest_version": 2,
  "name": "Mail Auth Info Viewer",
  "version": "1.0.7",
  "description": "Visualizes email authentication results (SPF, DKIM, DMARC) and the delivery route with time delays on the message display.",
  "browser_specific_settings": {
    "gecko": {
      "id": "mail-auth-info-viewer@precure.tv",
      "strict_min_version": "115.0"
    }
  },
  "icons": {
    "16": "images/icon.svg",
    "32": "images/icon.svg",
    "48": "images/icon.svg",
    "64": "images/icon.svg",
    "128": "images/icon.svg"
  },
  "permissions": [
    "messagesRead",
    "messagesModify"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self';",
  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
