{
  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "1.0.8",
  "description": "__MSG_extensionDescription__",
  "default_locale": "en",
  "browser_specific_settings": {
    "gecko": {
      "id": "mail-auth-info-viewer@precure.tv",
      "strict_min_version": "115.0"
    }
  },
  "icons": {
    "16": "images/icon.svg",
    "32": "images/icon.svg",
    "48": "images/icon.svg",
    "64": "images/icon.svg",
    "128": "images/icon.svg"
  },
  "permissions": [
    "messagesRead",
    "messagesModify"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_security_policy": "script-src 'self'; object-src 'self';"
}
